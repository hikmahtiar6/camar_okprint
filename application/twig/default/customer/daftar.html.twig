{% extends 'admin/layout.html.twig' %}

{% block title %}
	Form Pendaftaran Customer
{% endblock %}

{% block page_title %}
	OKE PRINT
{% endblock %}


{% block content_title %}
{% endblock %}

{% block content %}
	
	<div class="row clearfix">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
	        <div class="card" style="width: 50%; margin: 0 auto !important;">
	            <div class="header">
	            	<h2>
	            		Form Pendaftaran Customer
	            	</h2>
	            </div>
	            <div class="body" style="padding: 15px">

	            	<form class="customer-daftar" method="post" action="{{ site_url('customer/save') }}" to_url="{{ site_url('customer') }}">
	            	<table class="table table-bordered">
	            		<tr>
	            			<td>
	            				<label>CUSTOMER ID</label>
	            			</td>
	            			<td>
	            				<input class="form-control" name="cust_id" type="text" required="">
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>NAMA</label>
	            			</td>
	            			<td>
	            				<input class="form-control" name="nama" type="text" required="">
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>TELEPON</label>
	            			</td>
	            			<td>
	            				<input class="form-control" name="telepon" type="text">
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>EMAIL</label>
	            			</td>
	            			<td>
	            				<input class="form-control" name="email" type="email" required="">
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>ALAMAT</label>
	            			</td>
	            			<td>
	            				<textarea class="form-control" name="alamat"></textarea>
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>KOTA</label>
	            			</td>
	            			<td>
	            				<input class="form-control" name="kota" type="text">
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>JENIS CUSTOMER</label>
	            			</td>
	            			<td>
	            				<select class="form-control" name="jenis_customer">
	            					<option value="">- Pilih -</option>
	            					{% for key, row in jenis_customer() %}
	            						<option value="{{ row['id'] }}">{{ row['nama'] }}</option>
	            					{% endfor %}
	            				</select>
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            				<label>CS AUTHORIZATION</label>
	            			</td>
	            			<td>
	            				<input class="form-control" name="cs" type="text">
	            			</td>
	            		</tr>
	            		<tr>
	            			<td>
	            			</td>
	            			<td>
	            				<button class="btn btn-primary" type="submit">SIMPAN</button>
	            				<a class="btn btn-success" href="{{ site_url('customer') }}">BATAL</a>
	            			</td>
	            		</tr>
	            	</table>
	            	</form>

	            </div>
	        </div>
	    </div>
	 </div>

{% endblock %}

{% block javascript %}
		
	{{ parent() }}
	<script type="text/javascript" src="{{ base_url('assets_app/js/customer.js') }}"></script>
	<script type="text/javascript">
		window.CUSTOMER.handleDaftar();
	</script>

{% endblock %}